generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  password_hash String @map("password_hash")
  name          String

  sessions Session[]

  @@map("users")
}

model Session {
  id           String   @id @default(cuid())
  refreshToken String   @map("refresh_token")
  accessToken  String   @map("access_token")
  isActive     Boolean  @default(true) @map("is_active")
  expiresAt    DateTime @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([refreshToken])
  @@map("sessions")
}

model Customer {
  id          String  @id @default(cuid())
  name        String
  email       String  @unique
  phone       String?
  document    String? @unique
  companyName String? @map("company_name")

  address    String?
  complement String?
  city       String?
  state      String?
  zipCode    String? @map("zip_code")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  orders    Order[]

  @@map("customers")
}

model Product {
  id           String  @id @default(cuid())
  name         String
  slug         String  @unique
  sku          String  @unique
  description  String?
  priceInCents Int     @map("price_in_cents")
  stock        Int     @default(0)
  isActive     Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  categories Category[]  @relation("product_categories")
  orderItems OrderItem[]

  @@map("products")
}

model Category {
  id   String @id @default(cuid())
  name String
  slug String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  products Product[] @relation("product_categories")

  @@map("categories")
}

model Order {
  id            String        @id @default(cuid())
  orderCode     String        @unique @map("order_code")
  type          OrderType
  paymentMethod PaymentMethod @map("payment_method")
  status        OrderStatus

  // Totals
  subtotalInCents Int @map("subtotal_in_cents")
  discountInCents Int @default(0) @map("discount_in_cents")
  totalInCents    Int @map("total_in_cents")

  // Delivery address
  address    String?
  complement String?
  city       String?
  state      String?
  zipCode    String? @map("zip_code")

  notes String?

  customerId String? @map("customer_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  customer Customer?   @relation(fields: [customerId], references: [id])
  items    OrderItem[]

  @@map("orders")
}

model OrderItem {
  id               String @id @default(cuid())
  quantity         Int
  unitPriceInCents Int    @map("unit_price_in_cents")
  totalInCents     Int    @map("total_in_cents")

  orderId   String @map("order_id")
  productId String @map("product_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

enum PaymentMethod {
  CREDIT_CARD
  PIX
  BOLETO
  CASH
}

enum OrderType {
  ONLINE
  IN_STORE
}

enum OrderStatus {
  PENDING // aguardando pagamento
  PROCESSING // pagamento confirmado e o pedido está em preparação
  PREPARING_SHIPMENT // separando itens / empacotando
  SHIPPED // enviado
  DELIVERED // entregue
  CANCELED
  REFUNDED
}
